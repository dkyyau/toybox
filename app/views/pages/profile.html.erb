<div class="container profile-container">

  <div class="profile-page">
    <div class="profile-info">
      <h2> <i class="far fa-user-circle"></i> <%= (current_user.first_name).capitalize =%> <%= (current_user.last_name).capitalize =%> </h2>
      <p><%= current_user.email %></p>
      <p>Adress: <%= current_user.address %></p>
      <%=link_to 'Edit Info', '/users/edit', class: 'btn btn-warning' %>
    </div>

    <div class="profile-listings">
      <h2>Active Listings <%= link_to "List your toy +", new_toy_path, class: "btn btn-toyorange m-3" %></h2>
      <% @my_toys.each do |toy| %>

      <div class="listing">
        <div class="listing-img">
          <% if toy.photo.attached? %>
              <%= cl_image_tag toy.photo.key, height: 250, width: 150, crop: :fill %>
            <% else %>
              <img src="https://images.unsplash.com/photo-1558877385-81a1c7e67d72?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2100&q=80" />
            <% end %>
            <div class="profile-list-text"></div>
              <h5><%= toy.name %> </h5>
            <div class="text-split"></div>
          <p> Posted: <%= toy.created_at.strftime("%F") %></p>
        <%=link_to 'More', toy_path(toy), class: 'more-info' %>
        </div>

      </div>
      <% end %>
    </div>

  </div>
</div>







