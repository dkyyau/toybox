<div class="container text-center">
  <div class="row justify-content-center">
    <div class="col-md-8">

      <h1>Request <%= @toy.name %></h1>
      <%= simple_form_for([@toy, @offer]) do |f| %>
        <div class="form-inputs text-left">
          <%= f.input :start_date %>
          <%= f.input :end_date %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, class: 'btn btn-toyorange'%>
        </div>
      <% end %>
    </div>
  </div>
</div>
