<div class="d-flex">
  <div class="toys">
    <%= render 'shared/search' %>
    <div class="d-flex justify-content-between align-items-center">
      <h1>Available Toys</h1>
      <%= link_to new_toy_path, class: "btn btn-warning my-3" do %>
        List your toy <i class="fas fa-plus ml-1"></i>
      <% end %>
    </div>

    <% @toys.each do |toy| %>
      <%= link_to toy_path(toy) do %>
        <div class="card-toy">
          <% if toy.photo.attached? %>
            <%= cl_image_tag toy.photo.key, height: 300, width: 400, crop: :fill %>
          <% else %>
            <img src="https://images.unsplash.com/photo-1558877385-81a1c7e67d72?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2100&q=80" />
          <% end %>
          <div class="card-toy-info">
            <p style= "background-color: <%= toy.category.colour %>;" class="card-toy-category"><%= toy.category.name %></p>
            <h2><%= toy.name %></h2>
            <p><%= toy.description %></p>
            <h3 class="card-toy-price">Â£<%= number_with_precision(toy.price, precision: 2) %> / day</h3>
          </div>
        </div>S
      <% end %>
    <% end %>
  </div>

  <div id="map"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
</div>
