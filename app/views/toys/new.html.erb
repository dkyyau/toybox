<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">

      <h1>Create a new toy</h1>

<%= simple_form_for(@toy) do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :price, label: 'Price per day' %>
  <%= f.association :category %>
  <%= f.button :submit, class: 'btn btn-primary' %>
<% end %>
</div>
 </div>
</div>
